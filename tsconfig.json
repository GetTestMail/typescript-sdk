{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "index.ts",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}